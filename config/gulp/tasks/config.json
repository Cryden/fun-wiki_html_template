{
   "root": {
      "dev":  "./source",
      "dist": "./docs"
   },
   "html": {
      "dev": "html",
      "dist": "./",
      "parts": "templates",
      "run": true
   },
   "css": {
      "dev": "sass",
      "dist": "css",
      "parts": "parts",
      "extensions": "*.+(css|sass|scss)",
      "uncss": false
   },
   "pug": {
      "dev": "pug",
      "dist": "./"
   },
   "js": {
      "dev": "js",
      "dist": "js",
      "parts": "modules",
      "extensions": [".json", ".js"]
   },
   "img": {
      "dev": "images/**",
      "dist": "images",
      "extensions": "*.+(jpg|jpeg|gif|png|svg)"
   },
   "svg": {
      "dev": "img/svg",
      "dist": "assets/img"
   },
   "fonts": {
      "dev": "fonts/**/",
      "dist": "fonts",
      "extensions": "*.+(woff2|woff|eot|ttf|svg)"
   },
   "static": {
      "dev": "static",
      "dist": "static"
   },
   "deploy": {
      "hostname": "",
      "username": "",
      "path": "/",
      "password": ""
   },
   "browserSync": {
    "port": 3000,
    "proxy": {
      "target": "",
      "publicPath" : "",
      "files": [
        "../*.php"
      ]
    }
   }
}
